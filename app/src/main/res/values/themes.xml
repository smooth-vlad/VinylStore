<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.VinylStore" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/white_2</item>
        <item name="colorSecondary">@color/white_2</item>
        <item name="colorSecondaryContainer">@color/white_2</item>
        <item name="android:windowTranslucentStatus">false</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorSurface</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="colorSurfaceVariant">@color/white_1</item>
    </style>

    <style name="ExpandedToolbarTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="CollapsedToolbarTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="AppBarTitleTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="albumImageViewFrame" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">4dp</item>
    </style>

    <style name="vinylImageViewFrame" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="Theme.VinylStore.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.VinylStore.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.VinylStore.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="NavigationBarTextAppearance" parent="TextAppearance.Material3.TitleSmall">
        <item name="android:textSize">12sp</item>
    </style>
</resources>